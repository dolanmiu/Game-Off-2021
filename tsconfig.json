{
   "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "target": "ES2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "mapRoot": "/",
      "sourceRoot": "/",
      "outDir": "build",
      "alwaysStrict": true,
      "downlevelIteration": true,
      "baseUrl": "./",
      "strictNullChecks": true
   },
   "include": [
      "src/app/**/*.ts"
   ],
   "exclude": [
      "**/node_modules/**",
      "**/*.spec.ts",
      "dist/**"
   ]
}
